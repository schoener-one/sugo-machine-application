    "version": "0.2.0",
    "configurations": [
        {
            "name": "ServiceComponentGenerator ListOnly",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ServiceComponents/scripts/GenerateServiceComponents.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": ["-i", "${workspaceFolder}/MachineServiceComponents/MachineServiceComponents.yaml", "-o", "out/src-gen", "--list-only"]
        },
        {
            "name": "ServiceComponentGenerator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ServiceComponents/scripts/GenerateServiceComponents.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": ["-i", "${workspaceFolder}/MachineServiceComponents/MachineServiceComponents.yaml", "-o", "out/src-gen", "--generate-exec-group", "--generate-service-components", "-L", "debug"]
        },
        {
            "name": "ServiceComponentGenerator Templates",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ServiceComponents/scripts/GenerateServiceComponents.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": ["-i", "${workspaceFolder}/MachineServiceComponents/MachineServiceComponents.yaml", "-o", "out/src-gen", "-t"]
        },
        {
            "name": "ServiceComponentGenerator State Diagrams",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ServiceComponents/scripts/GenerateServiceComponents.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": ["-i", "${workspaceFolder}/MachineServiceComponents/MachineServiceComponents.yaml", "-o", "out/src-gen", "--generate-state-diagrams"]
        },
        {
            "name": "Debug HAL SmokeTest (x86)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/HardwareAbstractionLayer/test/HardwareAbstractionLayerSmokeTest",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "MIMode": "gdb"
        },
        {
            "name": "Debug HAL SmokeTest (remote)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/HardwareAbstractionLayer/test/HardwareAbstractionLayerSmokeTest",
            "miDebuggerServerAddress": "${config:remote.host}:${config:remote.port}",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "miDebuggerPath": "${workspaceFolder}/../sdk/sysroots/x86_64-pokysdk-linux/usr/bin/arm-poky-linux-gnueabi/arm-poky-linux-gnueabi-gdb",
            "MIMode": "gdb",
            "args": [],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "remote-gdbserver-start-HardwareAbstractionLayerSmokeTest"
        },
        {
            "name": "Debug MachineApplication (remote)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/MachineApplication/MachineApplication",
            "miDebuggerServerAddress": "${config:remote.host}:${config:remote.port}",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "miDebuggerPath": "${workspaceFolder}/../sdk/sysroots/x86_64-pokysdk-linux/usr/bin/arm-poky-linux-gnueabi/arm-poky-linux-gnueabi-gdb",
            "MIMode": "gdb",
            "args": [],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Machine Application (x86)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/MachineApplication/MachineApplication",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "args": ["--config-file", "${workspaceFolder}/MachineApplication/conf/MachineConfig.json"]
        },
        {
            "name": "Machine Application Integration Test (x86)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/MachineApplication/test/MachineApplicationIntegrationTest",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "args": []
        },
        {
            "name": "Debug Machine Remote Control Server (x86)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:build.directory}/MachineRemoteControl/MachineRemoteControlServer",
            "cwd": "${workspaceFolder}/MachineRemoteControl",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "args": ["www"]
        },
    ]
}